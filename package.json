{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"name": "accureleaser",
	"license": "MIT",
	"type": "module",
	"author": "e0selmy4v",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/accurtype/accureleaser.git"
	},
	"scripts": {
		"prepare": "husky",
		"ls-proj": "make-dir config/dist && pnpm -s ls -r --filter=!. --depth=-1 --json>config/dist/packages.json",
		"cz": "pnpm -s ls-proj && pnpm -s lint && cz",

		"prefmt": "prettier -w .",
		"fmt": "eslint . --fix",
		"prelint": "prettier -c .",
		"lint": "eslint .",

		"dry-test": "pnpm run -r dry-test",
		"build": "pnpm run -r build",
		"wet-test": "pnpm run -r wet-test",
		"clear": "pnpm run -r clear",
		"ci": "pnpm lint & pnpm dry-test & pnpm build & pnpm wet-test & pnpm clear"
	},
	"devDependencies": {
		"husky": "^9.*.*",

		"@commitlint/cli": "^20.*.*",
		"commitizen": "^4.*.*",
		"cz-customizable": "^7.*.*",

		"eslint": "^9.*.*",
		"prettier": "latest",

		"rimraf": "latest",
		"make-dir-cli": "latest",
		"tsx": "latest",
		"esbuild": "latest",
		"typescript": "latest"
	},
	"prettier": {
		"printWidth": 200,
		"tabWidth": 4,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"jsxSingleQuote": false,
		"trailingComma": "all"
	},
	"config": {
		"cz-customizable": {
			"config": "./config/cz-config.cjs"
		},
		"commitizen": {
			"path": "./node_modules/cz-customizable"
		}
	}
}
