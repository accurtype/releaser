{
	"$schema": "https://json.schemastore.org/package",
	"private": true,
	"name": "accureleaser",
	"license": "MIT",
	"type": "commonjs",
	"author": "e0selmy4v",
	"scripts": {
		"prepare": "husky",
		"commit": "cz",
		"prefmt": "prettier -w .",
		"fmt": "eslint . --fix",
		"prelint": "prettier -c .",
		"lint": "eslint .",
		"dry-test": "pnpm -F ./packages/* dry-test",
		"build": "pnpm -F ./packages/* build",
		"wet-test": "pnpm -F ./packages/* wet-test",
		"clear": "pnpm -F ./packages/* clear",
		"ci": "pnpm lint & pnpm dry-test & pnpm build & pnpm wet-test & pnpm clear"
	},
	"devDependencies": {
		"@commitlint/cli": "^18.6.1",
		"@typescript-eslint/eslint-plugin": "^6.20.0",
		"@typescript-eslint/parser": "^6.20.0",
		"commitizen": "^4.3.0",
		"cz-customizable": "^7.0.0",
		"eslint": "^8.56.0",
		"eslint-config-accurtype-style": "workspace:^",
		"eslint-plugin-markdown": "^3.0.1",
		"husky": "^9.0.10",
		"prettier": "^3.2.5",
		"rimraf": "^5.0.5",
		"ts-node": "^10.9.2",
		"typescript": "^4.8.4"
	},
	"prettier": {
		"printWidth": 200,
		"tabWidth": 4,
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"jsxSingleQuote": false,
		"trailingComma": "all"
	},
	"config": {
		"cz-customizable": {
			"config": "./config/cz-config.js"
		},
		"commitizen": {
			"path": "node_modules/cz-customizable"
		}
	}
}
